{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/*.ts"
  ]
}